@{
}
@model QuanLyShop.Models.EF.ReviewProduct

<div class="add_review">
    <form id="review_form" asp-action="PostReview" asp-controller="Review" method="post">
        @Html.AntiForgeryToken()
        <div>
            <h1>Add Review</h1>
            <input asp-for="FullName" class="form_input input_name" placeholder="Name*" id="review_name" />
            <input asp-for="Email" class="form_input input_email" placeholder="Email*" id="review_email" />
            <input type="hidden" asp-for="UserName" />
            <input type="hidden" asp-for="ProductId" value="@ViewBag.ProductId" />
            <input type="hidden" id="txtRate" name="Rate" value="4" />
        </div>

        <div>
            <h1>Your Rating:</h1>
            <ul class="user_star_rating">
                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
            </ul>
            <textarea asp-for="Content" class="input_review" rows="4" placeholder="Your Review"></textarea>
        </div>
        <div class="text-left text-sm-right">
            <button id="review_submit" type="submit" class="red_button review_submit_btn trans_300">Submit</button>
        </div>
    </form>
</div>