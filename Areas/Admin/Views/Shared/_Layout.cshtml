                            </form>
                        </li>
                    </ul>
                    
                    <!--end::Sidebar Menu-->
                </nav>
            </div>
            <!--end::Sidebar Wrapper-->
        </aside>
        <!--end::Sidebar-->
        <!--begin::App Main-->
        <main class="app-main">
            @RenderBody()
        </main>
        <!--end::App Main-->
        <!--begin::Footer-->
